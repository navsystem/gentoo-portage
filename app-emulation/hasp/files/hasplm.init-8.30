depend () {
    need net localmount
    after aksusbd
}

start() {
	ebegin "Starting HASP License manager"
	start-stop-daemon --start --quiet  --exec /usr/sbin/hasplm -- ${HASPLM_ARGS}
	eend $?
}

stop() {
	ebegin "Stopping HASP License manager"
	start-stop-daemon --stop --quiet --retry 10 --exec /usr/sbin/hasplm
	eend $?
}
